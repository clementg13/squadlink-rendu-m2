{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "production": {
      "distribution": "store",
      "env": {
        "NODE_ENV": "production",
        "EAS_BUILD_AUTOINSTALL": "eas-hooks"
      },
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:assembleDebug && ./scripts/run-maestro-in-build.sh && :app:bundleRelease"
      }
    },
    "test": {
      "distribution": "internal",
      "env": {
        "NODE_ENV": "test"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug :app:assembleAndroidTest"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
